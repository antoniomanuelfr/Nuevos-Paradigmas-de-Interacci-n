<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ScrollQrReaded"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name" />

            <TextView
                android:id="@+id/readed_name_from_qr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/image_readed_from_qr"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:scaleType="fitCenter"
                android:visibility="visible"
                />

            <Button
                android:id="@+id/ask_bot_from_qr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/habla_bot"
                android:visibility="visible" />

            <Button
                android:id="@+id/info_button_from_qr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_button"
                android:visibility="visible" />

            <Button
                android:id="@+id/go_wiki_from_qr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/visitar_wiki"
                android:visibility="visible" />
            <View style="@style/Divider"
                />
        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>