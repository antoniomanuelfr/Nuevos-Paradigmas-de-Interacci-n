<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@drawable/trono"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="mobi.garden.bottomnavigationtest.HomeActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View style="@style/Divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/boton_jon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:alpha="0.85"
                    android:drawableLeft="@android:drawable/ic_menu_myplaces"
                    android:text="@string/jon"
                    android:textColor="@color/aidialog_background"
                    app:backgroundTint="@color/common_google_signin_btn_text_light_default" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/boton_daenerys"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:alpha="0.80"
                    android:drawableLeft="@android:drawable/ic_menu_myplaces"
                    android:text="@string/daenerys"
                    android:textColor="@color/common_google_signin_btn_text_light_default"
                    app:backgroundTint="@color/red500" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/boton_tyrion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:alpha="0.70"
                    android:drawableLeft="@android:drawable/ic_menu_myplaces"
                    android:text="@string/tyrion"
                    android:textColor="@color/zxing_viewfinder_laser"
                    app:backgroundTint="@color/common_google_signin_btn_text_dark_focused" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/boton_acero"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:alpha="0.80"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:text="@string/acero"
                    android:textColor="@color/common_google_signin_btn_text_light_pressed"
                    app:backgroundTint="@color/default_right_bubble_color" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/boton_stark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:alpha="0.85"
                    android:drawableLeft="@android:drawable/ic_menu_compass"
                    android:text="@string/stark"
                    android:textColor="@color/aidialog_background"
                    app:backgroundTint="@color/zxing_custom_viewfinder_laser" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/boton_targaryen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:alpha="0.80"
                    android:drawableLeft="@android:drawable/ic_menu_compass"
                    android:text="@string/targaryen"
                    android:textColor="@color/common_google_signin_btn_text_light_default"
                    app:backgroundTint="@color/red500" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/boton_lannister"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:alpha="0.70"
                    android:drawableLeft="@android:drawable/ic_menu_compass"
                    android:text="@string/lannister"
                    android:textColor="@color/zxing_viewfinder_laser"
                    app:backgroundTint="@color/common_google_signin_btn_text_dark_focused" />
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/boton_cersei"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:alpha="0.70"
                    android:drawableLeft="@android:drawable/ic_menu_myplaces"
                    android:text="@string/cersei"
                    android:textColor="@color/zxing_viewfinder_laser"
                    app:backgroundTint="@color/common_google_signin_btn_text_dark_focused" />



            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/boton_caminantes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:alpha="0.85"
                    android:drawableLeft="@android:drawable/ic_menu_myplaces"
                    android:text="@string/caminantes"
                    android:textColor="@color/aidialog_background"
                    app:backgroundTint="@color/blueGray500" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/boton_dragones"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:alpha="0.85"
                    android:drawableLeft="@android:drawable/ic_menu_myplaces"
                    android:text="@string/dragones"
                    android:textColor="@color/blueGray500"
                    app:backgroundTint="@color/design_default_color_primary_dark" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/boton_vidriagon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:alpha="1.0"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:text="@string/vidriagon"
                    android:textColor="@color/default_left_bubble_color"
                    app:backgroundTint="@color/zxing_result_view" />



            </LinearLayout>

            <View style="@style/Divider" />

            <View style="@style/Divider" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
